<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:layout_marginBottom="100dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:id="@+id/btnRefresh"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/btnDate"
            android:layout_alignTop="@+id/btnRefresh"
            android:layout_toRightOf="@+id/btnRefresh"
            android:layout_toEndOf="@+id/btnRefresh" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:id="@+id/btnMonth"
            android:layout_alignTop="@+id/btnDate"
            android:layout_toRightOf="@+id/btnDate"
            android:layout_toEndOf="@+id/btnDate" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/btnClear"
            android:layout_alignBottom="@+id/btnMonth"
            android:layout_toRightOf="@+id/btnMonth"
            android:layout_toEndOf="@+id/btnMonth" />

</RelativeLayout >